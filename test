import React, { useState } from 'react';
import { Plus, X, Wallet, ArrowUpCircle, ArrowDownCircle, PiggyBank } from 'lucide-react';

// --- ‡∏™‡πà‡∏ß‡∏ô‡∏ó‡∏µ‡πà 1: Component ‡πÅ‡∏ö‡∏ö Modal (‡∏´‡∏ô‡πâ‡∏≤‡∏ï‡πà‡∏≤‡∏á‡πÄ‡∏î‡πâ‡∏á) ---
function AddTransactionModal({ isOpen, onClose, onSave }) {
  if (!isOpen) return null;

  const handleSubmit = (e) => {
    e.preventDefault();
    const form = e.target;
    const formData = new FormData(form);
    
    const newData = {
      title: formData.get('title'),
      amount: formData.get('amount'),
      date: formData.get('date'),
      type: formData.get('type'),
    };

    if (!newData.title || !newData.amount) {
        alert("‡∏Å‡∏£‡∏≠‡∏Å‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡πÉ‡∏´‡πâ‡∏Ñ‡∏£‡∏ö‡∏Å‡πà‡∏≠‡∏ô‡∏ô‡∏∞‡∏Ñ‡∏£‡∏±‡∏ö");
        return;
    }

    onSave(newData);
    onClose();
  };

  return (
    <div className="fixed inset-0 bg-black/50 z-50 flex items-center justify-center p-4 backdrop-blur-sm animate-in fade-in duration-200">
      <div className="bg-white w-full max-w-sm rounded-3xl shadow-2xl overflow-hidden animate-in zoom-in-95 duration-200">
        <div className="bg-indigo-600 p-4 flex justify-between items-center">
          <h3 className="text-white font-bold text-lg flex items-center gap-2">
            <Plus className="w-5 h-5" /> ‡πÄ‡∏û‡∏¥‡πà‡∏°‡∏£‡∏≤‡∏¢‡∏Å‡∏≤‡∏£‡πÉ‡∏´‡∏°‡πà
          </h3>
          <button onClick={onClose} className="text-white/80 hover:text-white bg-white/10 p-1 rounded-full">
            <X size={20} />
          </button>
        </div>

        <form onSubmit={handleSubmit} className="p-6 space-y-4">
          <div>
            <label className="text-sm font-medium text-slate-500 mb-1 block">‡∏ä‡∏∑‡πà‡∏≠‡∏£‡∏≤‡∏¢‡∏Å‡∏≤‡∏£</label>
            <input name="title" type="text" placeholder="‡πÄ‡∏ä‡πà‡∏ô ‡∏Ñ‡πà‡∏≤‡∏Ç‡πâ‡∏≤‡∏ß, ‡πÄ‡∏á‡∏¥‡∏ô‡πÄ‡∏î‡∏∑‡∏≠‡∏ô" className="w-full p-3 bg-slate-50 border border-slate-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-500" autoFocus />
          </div>

          <div className="grid grid-cols-2 gap-3">
            <div>
              <label className="text-sm font-medium text-slate-500 mb-1 block">‡∏à‡∏≥‡∏ô‡∏ß‡∏ô‡πÄ‡∏á‡∏¥‡∏ô</label>
              <input name="amount" type="number" placeholder="0.00" className="w-full p-3 bg-slate-50 border border-slate-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-500" />
            </div>
            <div>
              <label className="text-sm font-medium text-slate-500 mb-1 block">‡∏ß‡∏±‡∏ô‡∏ó‡∏µ‡πà</label>
              <input name="date" type="date" defaultValue={new Date().toISOString().split('T')[0]} className="w-full p-3 bg-slate-50 border border-slate-200 rounded-xl text-slate-600 focus:outline-none focus:ring-2 focus:ring-indigo-500" />
            </div>
          </div>

          <div>
            <label className="text-sm font-medium text-slate-500 mb-2 block">‡∏õ‡∏£‡∏∞‡πÄ‡∏†‡∏ó</label>
            <div className="grid grid-cols-3 gap-2">
              <label className="cursor-pointer">
                <input type="radio" name="type" value="income" className="peer sr-only" />
                <div className="py-2 px-1 text-center border-2 border-slate-100 rounded-xl text-sm font-medium text-slate-400 peer-checked:border-emerald-500 peer-checked:bg-emerald-50 peer-checked:text-emerald-600 transition-all hover:bg-slate-50">
                   ‡∏£‡∏≤‡∏¢‡∏£‡∏±‡∏ö
                </div>
              </label>
              <label className="cursor-pointer">
                <input type="radio" name="type" value="expense" defaultChecked className="peer sr-only" />
                <div className="py-2 px-1 text-center border-2 border-slate-100 rounded-xl text-sm font-medium text-slate-400 peer-checked:border-rose-500 peer-checked:bg-rose-50 peer-checked:text-rose-600 transition-all hover:bg-slate-50">
                   ‡∏£‡∏≤‡∏¢‡∏à‡πà‡∏≤‡∏¢
                </div>
              </label>
              <label className="cursor-pointer">
                <input type="radio" name="type" value="savings" className="peer sr-only" />
                <div className="py-2 px-1 text-center border-2 border-slate-100 rounded-xl text-sm font-medium text-slate-400 peer-checked:border-blue-500 peer-checked:bg-blue-50 peer-checked:text-blue-600 transition-all hover:bg-slate-50">
                   ‡πÄ‡∏á‡∏¥‡∏ô‡∏≠‡∏≠‡∏°
                </div>
              </label>
            </div>
          </div>

          <button type="submit" className="w-full bg-indigo-600 text-white py-3.5 rounded-xl font-bold text-lg shadow-lg shadow-indigo-200 hover:bg-indigo-700 active:scale-95 transition-all mt-2">
            ‡∏ö‡∏±‡∏ô‡∏ó‡∏∂‡∏Å‡∏£‡∏≤‡∏¢‡∏Å‡∏≤‡∏£
          </button>
        </form>
      </div>
    </div>
  );
}

// --- ‡∏™‡πà‡∏ß‡∏ô‡∏ó‡∏µ‡πà 2: ‡∏´‡∏ô‡πâ‡∏≤‡∏à‡∏≠‡∏´‡∏•‡∏±‡∏Å ---
export default function App() {
  const [transactions, setTransactions] = useState([
    { id: 1, title: '‡πÄ‡∏á‡∏¥‡∏ô‡πÄ‡∏î‡∏∑‡∏≠‡∏ô', amount: 25000, type: 'income', date: '2023-10-25' },
    { id: 2, title: '‡∏Ñ‡πà‡∏≤‡∏´‡∏≠‡∏û‡∏±‡∏Å', amount: 4500, type: 'expense', date: '2023-10-26' },
    { id: 3, title: '‡∏ù‡∏≤‡∏Å‡∏õ‡∏£‡∏∞‡∏à‡∏≥', amount: 2000, type: 'savings', date: '2023-10-27' },
  ]);

  const [isModalOpen, setIsModalOpen] = useState(false);

  const handleAddTransaction = (newData) => {
    setTransactions([{ ...newData, id: Date.now() }, ...transactions]);
  };

  // ‚úÖ ‡∏Ñ‡∏≥‡∏ô‡∏ß‡∏ì‡πÅ‡∏¢‡∏Å 4 ‡∏¢‡∏≠‡∏î
  const { balance, income, expense, savings } = transactions.reduce((acc, t) => {
    const amt = Number(t.amount);
    if(t.type === 'income') { 
        acc.income += amt; 
        acc.balance += amt; 
    }
    else if(t.type === 'expense') { 
        acc.expense += amt; 
        acc.balance -= amt; 
    }
    else if(t.type === 'savings') { 
        acc.savings += amt; 
        acc.balance -= amt; 
    }
    return acc;
  }, { balance: 0, income: 0, expense: 0, savings: 0 });

  return (
    <div className="min-h-screen bg-slate-100 font-sans pb-24 relative">
      
      {/* Background ‡∏™‡∏µ‡∏ô‡πâ‡∏≥‡πÄ‡∏á‡∏¥‡∏ô */}
      <div className="bg-indigo-600 h-48 rounded-b-[2.5rem] relative">
         <div className="px-6 pt-8 flex justify-between items-center text-white">
            <h1 className="text-xl font-bold opacity-90">My Wallet</h1>
            <div className="w-8 h-8 bg-indigo-500 rounded-full flex items-center justify-center">üë§</div>
         </div>
      </div>

      {/* üî• ‡πÅ‡∏Å‡πâ‡πÑ‡∏Ç‡∏à‡∏∏‡∏î‡∏ô‡∏µ‡πâ: ‡πÄ‡∏ï‡∏¥‡∏° relative z-10 ‡πÄ‡∏û‡∏∑‡πà‡∏≠‡πÉ‡∏´‡πâ‡∏•‡∏≠‡∏¢‡∏ó‡∏±‡∏ö‡∏™‡∏µ‡∏°‡πà‡∏ß‡∏á */}
      <div className="px-6 -mt-24 mb-6 relative z-10">
        <div className="bg-white rounded-3xl shadow-xl p-6 text-slate-800">
            
            {/* ‡πÇ‡∏ã‡∏ô‡∏ö‡∏ô: ‡∏¢‡∏≠‡∏î‡∏Ñ‡∏á‡πÄ‡∏´‡∏•‡∏∑‡∏≠ */}
            <div className="text-center mb-6">
                <p className="text-slate-500 text-sm mb-1">‡∏¢‡∏≠‡∏î‡πÄ‡∏á‡∏¥‡∏ô‡∏Ñ‡∏á‡πÄ‡∏´‡∏•‡∏∑‡∏≠‡∏™‡∏∏‡∏ó‡∏ò‡∏¥</p>
                <h2 className={`text-4xl font-bold ${balance < 0 ? 'text-red-600' : 'text-slate-900'}`}>
                    ‡∏ø{balance.toLocaleString()}
                </h2>
            </div>

            {/* ‡πÄ‡∏™‡πâ‡∏ô‡πÅ‡∏ö‡πà‡∏á */}
            <div className="h-px bg-slate-100 mb-6"></div>

            {/* ‡πÇ‡∏ã‡∏ô‡∏•‡πà‡∏≤‡∏á: ‡∏£‡∏≤‡∏¢‡∏£‡∏±‡∏ö | ‡∏£‡∏≤‡∏¢‡∏à‡πà‡∏≤‡∏¢ | ‡πÄ‡∏á‡∏¥‡∏ô‡∏≠‡∏≠‡∏° */}
            <div className="flex justify-around items-start">
                
                {/* ‡∏£‡∏≤‡∏¢‡∏£‡∏±‡∏ö */}
                <div className="flex flex-col items-center gap-1">
                    <div className="w-10 h-10 rounded-full bg-emerald-100 text-emerald-600 flex items-center justify-center mb-1">
                        <ArrowUpCircle size={20} />
                    </div>
                    <span className="text-xs text-slate-400">‡∏£‡∏≤‡∏¢‡∏£‡∏±‡∏ö</span>
                    <span className="font-bold text-emerald-600 text-sm">+{income.toLocaleString()}</span>
                </div>

                {/* ‡∏£‡∏≤‡∏¢‡∏à‡πà‡∏≤‡∏¢ */}
                <div className="flex flex-col items-center gap-1">
                    <div className="w-10 h-10 rounded-full bg-rose-100 text-rose-600 flex items-center justify-center mb-1">
                        <ArrowDownCircle size={20} />
                    </div>
                    <span className="text-xs text-slate-400">‡∏£‡∏≤‡∏¢‡∏à‡πà‡∏≤‡∏¢</span>
                    <span className="font-bold text-rose-600 text-sm">-{expense.toLocaleString()}</span>
                </div>

                {/* ‡πÄ‡∏á‡∏¥‡∏ô‡∏≠‡∏≠‡∏° */}
                <div className="flex flex-col items-center gap-1">
                    <div className="w-10 h-10 rounded-full bg-blue-100 text-blue-600 flex items-center justify-center mb-1">
                        <PiggyBank size={20} />
                    </div>
                    <span className="text-xs text-slate-400">‡πÄ‡∏á‡∏¥‡∏ô‡∏≠‡∏≠‡∏°</span>
                    <span className="font-bold text-blue-600 text-sm">{savings.toLocaleString()}</span>
                </div>

            </div>
        </div>
      </div>

      {/* ‡∏£‡∏≤‡∏¢‡∏Å‡∏≤‡∏£‡∏ò‡∏∏‡∏£‡∏Å‡∏£‡∏£‡∏° */}
      <div className="px-6">
        <h3 className="font-bold text-slate-700 mb-4">‡∏õ‡∏£‡∏∞‡∏ß‡∏±‡∏ï‡∏¥‡∏•‡πà‡∏≤‡∏™‡∏∏‡∏î</h3>
        <div className="space-y-3">
          {transactions.map(t => (
            <div key={t.id} className="bg-white p-4 rounded-xl shadow-sm flex items-center justify-between">
               <div className="flex items-center gap-3">
                  <div className={`w-10 h-10 rounded-full flex items-center justify-center ${t.type==='income'?'bg-emerald-100 text-emerald-600':t.type==='expense'?'bg-rose-100 text-rose-600':'bg-blue-100 text-blue-600'}`}>
                    {t.type==='income' ? <ArrowUpCircle size={20}/> : t.type==='expense' ? <ArrowDownCircle size={20}/> : <PiggyBank size={20}/>}
                  </div>
                  <div>
                    <p className="font-bold text-slate-800">{t.title}</p>
                    <p className="text-xs text-slate-400">{t.date}</p>
                  </div>
               </div>
               <span className={`font-bold ${t.type==='income'?'text-emerald-500':t.type==='expense'?'text-rose-500':'text-blue-500'}`}>
                 {t.type==='income'?'+':'-'}{Number(t.amount).toLocaleString()}
               </span>
            </div>
          ))}
        </div>
      </div>

      <button 
        onClick={() => setIsModalOpen(true)}
        className="fixed bottom-6 right-6 w-16 h-16 bg-indigo-600 hover:bg-indigo-700 text-white rounded-full shadow-2xl flex items-center justify-center transition-transform active:scale-90 z-40"
      >
        <Plus size={32} />
      </button>

      <AddTransactionModal 
        isOpen={isModalOpen} 
        onClose={() => setIsModalOpen(false)} 
        onSave={handleAddTransaction} 
      />

    </div>
  );
}


import React, { useState } from "react";
import {
  Plus,
  X,
  ArrowUpCircle,
  ArrowDownCircle,
  PiggyBank,
  Trash2,
} from "lucide-react";

// ----------------------------------------------------------------------
// 1. TYPE DEFINITIONS
// ----------------------------------------------------------------------
export type TransactionType = "income" | "expense" | "saving";

export interface Transaction {
  id: number;
  title: string;
  amount: number;
  type: TransactionType;
  date: string;
}

// ----------------------------------------------------------------------
// 2. COMPONENT: FORM (TransactionForm - Modal Version)
// ----------------------------------------------------------------------
interface FormProps {
  isOpen: boolean;
  onClose: () => void;
  onSave: (tx: Transaction) => void;
}

export function TransactionForm({ isOpen, onClose, onSave }: FormProps) {
  const [title, setTitle] = useState("");
  const [amount, setAmount] = useState("");
  const [type, setType] = useState<TransactionType>("income");
  const [date, setDate] = useState(new Date().toISOString().split("T")[0]);

  const handleSubmit = (e: React.FormEvent) => {
    e.preventDefault();
    if (!title || !amount) {
      alert("‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡∏Å‡∏£‡∏≠‡∏Å‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡πÉ‡∏´‡πâ‡∏Ñ‡∏£‡∏ö‡∏ñ‡πâ‡∏ß‡∏ô");
      return;
    }

    const newEntry: Transaction = {
      id: Date.now(),
      title,
      amount: Number(amount),
      type,
      date,
    };

    onSave(newEntry);

    // Reset form
    setTitle("");
    setAmount("");
    onClose();
  };

  if (!isOpen) return null;

  return (
    <div className="fixed inset-0 bg-black/50 z-50 flex items-center justify-center p-4 backdrop-blur-sm animate-in fade-in duration-200">
      <div className="bg-white w-full max-w-sm rounded-3xl shadow-2xl overflow-hidden animate-in zoom-in-95 duration-200">
        <div className="bg-indigo-600 p-4 flex justify-between items-center">
          <h3 className="text-white font-bold text-lg flex items-center gap-2">
            <Plus className="w-5 h-5" /> ‡πÄ‡∏û‡∏¥‡πà‡∏°‡∏£‡∏≤‡∏¢‡∏Å‡∏≤‡∏£‡πÉ‡∏´‡∏°‡πà
          </h3>
          <button
            onClick={onClose}
            className="text-white/80 hover:text-white bg-white/10 p-1 rounded-full transition-colors"
          >
            <X size={20} />
          </button>
        </div>

        <form onSubmit={handleSubmit} className="p-6 space-y-4">
          <div>
            <label className="text-sm font-medium text-slate-500 mb-1 block">
              ‡∏ß‡∏±‡∏ô‡∏ó‡∏µ‡πà
            </label>
            <input
              type="date"
              value={date}
              onChange={(e) => setDate(e.target.value)}
              className="w-full p-3 bg-slate-50 border border-slate-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-500 text-slate-600"
            />
          </div>

          <div className="grid grid-cols-2 gap-3">
            <div>
              <label className="text-sm font-medium text-slate-500 mb-1 block">
                ‡∏£‡∏≤‡∏¢‡∏Å‡∏≤‡∏£
              </label>
              <input
                type="text"
                value={title}
                onChange={(e) => setTitle(e.target.value)}
                className="w-full p-3 bg-slate-50 border border-slate-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-500"
                placeholder="‡∏Ñ‡πà‡∏≤‡∏≠‡∏≤‡∏´‡∏≤‡∏£"
                autoFocus
              />
            </div>
            <div>
              <label className="text-sm font-medium text-slate-500 mb-1 block">
                ‡∏à‡∏≥‡∏ô‡∏ß‡∏ô‡πÄ‡∏á‡∏¥‡∏ô
              </label>
              <input
                type="number"
                value={amount}
                onChange={(e) => setAmount(e.target.value)}
                className="w-full p-3 bg-slate-50 border border-slate-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-500"
                placeholder="0"
              />
            </div>
          </div>

          <div>
            <label className="text-sm font-medium text-slate-500 mb-2 block">
              ‡∏õ‡∏£‡∏∞‡πÄ‡∏†‡∏ó
            </label>
            <div className="grid grid-cols-3 gap-2">
              {(["income", "expense", "saving"] as const).map((t) => (
                <button
                  key={t}
                  type="button"
                  onClick={() => setType(t)}
                  className={`py-2 px-1 rounded-xl border text-sm font-medium transition-all ${
                    type === t
                      ? t === "income"
                        ? "bg-emerald-500 text-white border-emerald-500"
                        : t === "expense"
                        ? "bg-rose-500 text-white border-rose-500"
                        : "bg-blue-500 text-white border-blue-500"
                      : "bg-white text-slate-500 border-slate-200 hover:bg-slate-50"
                  }`}
                >
                  {t === "income"
                    ? "‡∏£‡∏≤‡∏¢‡∏£‡∏±‡∏ö"
                    : t === "expense"
                    ? "‡∏£‡∏≤‡∏¢‡∏à‡πà‡∏≤‡∏¢"
                    : "‡πÄ‡∏á‡∏¥‡∏ô‡∏≠‡∏≠‡∏°"}
                </button>
              ))}
            </div>
          </div>

          <button
            type="submit"
            className="w-full bg-indigo-600 text-white py-3.5 rounded-xl font-bold text-lg shadow-lg shadow-indigo-200 hover:bg-indigo-700 active:scale-95 transition-all mt-2"
          >
            ‡∏ö‡∏±‡∏ô‡∏ó‡∏∂‡∏Å‡∏£‡∏≤‡∏¢‡∏Å‡∏≤‡∏£
          </button>
        </form>
      </div>
    </div>
  );
}

// ----------------------------------------------------------------------
// 3. MAIN APP (Dashboard)
// ----------------------------------------------------------------------
export default function App() {
  // --- Logic ‡∏ó‡∏µ‡πà‡πÄ‡∏Ñ‡∏¢‡∏≠‡∏¢‡∏π‡πà‡πÉ‡∏ô useTransaction ‡∏¢‡πâ‡∏≤‡∏¢‡∏°‡∏≤‡πÑ‡∏ß‡πâ‡∏ï‡∏£‡∏á‡∏ô‡∏µ‡πâ ---

  // State ‡∏´‡∏•‡∏±‡∏Å: ‡πÄ‡∏Å‡πá‡∏ö‡∏£‡∏≤‡∏¢‡∏Å‡∏≤‡∏£‡∏ó‡∏±‡πâ‡∏á‡∏´‡∏°‡∏î
  const [transactions, setTransactions] = useState<Transaction[]>([
    {
      id: 1,
      title: "‡∏¢‡∏≠‡∏î‡∏¢‡∏Å‡∏°‡∏≤",
      amount: 5000,
      type: "income",
      date: "2023-10-01",
    },
  ]);

  // State ‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö‡∏Ñ‡∏ß‡∏ö‡∏Ñ‡∏∏‡∏°‡∏Å‡∏≤‡∏£‡πÄ‡∏õ‡∏¥‡∏î/‡∏õ‡∏¥‡∏î Modal
  const [isModalOpen, setIsModalOpen] = useState(false);

  // ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡πÄ‡∏û‡∏¥‡πà‡∏°‡∏£‡∏≤‡∏¢‡∏Å‡∏≤‡∏£
  const addTransaction = (newTx: Transaction) => {
    setTransactions((prev) => [newTx, ...prev]);
  };

  // ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏•‡∏ö‡∏£‡∏≤‡∏¢‡∏Å‡∏≤‡∏£
  const deleteTransaction = (id: number) => {
    setTransactions((prev) => prev.filter((t) => t.id !== id));
  };

  // Logic ‡∏Ñ‡∏≥‡∏ô‡∏ß‡∏ì‡∏¢‡∏≠‡∏î‡πÄ‡∏á‡∏¥‡∏ô (‡πÄ‡∏Ç‡∏µ‡∏¢‡∏ô‡∏™‡∏î‡πÉ‡∏ô Component)
  const totalIncome = transactions
    .filter((t) => t.type === "income")
    .reduce((sum, t) => sum + t.amount, 0);

  const totalExpense = transactions
    .filter((t) => t.type === "expense")
    .reduce((sum, t) => sum + t.amount, 0);

  const totalSaving = transactions
    .filter((t) => t.type === "saving")
    .reduce((sum, t) => sum + t.amount, 0);

  const balance = totalIncome - totalExpense - totalSaving;

  return (
    <div className="min-h-screen bg-slate-50 p-4 font-sans text-slate-800 pb-24 relative">
      <div className="max-w-md mx-auto">
        {/* Header Summary */}
        <div className="bg-indigo-600 text-white p-6 rounded-3xl shadow-xl mb-6 relative overflow-hidden">
          <div className="absolute top-0 right-0 w-32 h-32 bg-white/5 rounded-full -translate-y-10 translate-x-10 blur-2xl"></div>

          <div className="relative z-10">
            <p className="text-indigo-200 text-sm mb-1">‡∏¢‡∏≠‡∏î‡∏Ñ‡∏á‡πÄ‡∏´‡∏•‡∏∑‡∏≠‡∏™‡∏∏‡∏ó‡∏ò‡∏¥</p>
            <h1 className="text-4xl font-bold mb-6">
              ‡∏ø{balance.toLocaleString()}
            </h1>

            <div className="flex justify-between text-center bg-indigo-800/40 p-4 rounded-2xl backdrop-blur-md border border-white/10">
              <div>
                <div className="flex items-center gap-1 text-emerald-300 text-xs mb-1 justify-center">
                  <ArrowUpCircle size={14} /> ‡∏£‡∏±‡∏ö
                </div>
                <div className="font-bold">{totalIncome.toLocaleString()}</div>
              </div>
              <div className="w-[1px] bg-indigo-400/30"></div>
              <div>
                <div className="flex items-center gap-1 text-rose-300 text-xs mb-1 justify-center">
                  <ArrowDownCircle size={14} /> ‡∏à‡πà‡∏≤‡∏¢
                </div>
                <div className="font-bold">{totalExpense.toLocaleString()}</div>
              </div>
              <div className="w-[1px] bg-indigo-400/30"></div>
              <div>
                <div className="flex items-center gap-1 text-blue-300 text-xs mb-1 justify-center">
                  <PiggyBank size={14} /> ‡∏≠‡∏≠‡∏°
                </div>
                <div className="font-bold">{totalSaving.toLocaleString()}</div>
              </div>
            </div>
          </div>
        </div>

        {/* Transaction List */}
        <div className="space-y-3">
          <h3 className="font-bold text-slate-700 px-1">‡∏õ‡∏£‡∏∞‡∏ß‡∏±‡∏ï‡∏¥‡∏£‡∏≤‡∏¢‡∏Å‡∏≤‡∏£</h3>
          {transactions.length === 0 ? (
            <div className="text-center text-slate-400 py-10 border-2 border-dashed border-slate-200 rounded-xl bg-white/50">
              ‡∏¢‡∏±‡∏á‡πÑ‡∏°‡πà‡∏°‡∏µ‡∏£‡∏≤‡∏¢‡∏Å‡∏≤‡∏£
            </div>
          ) : (
            transactions.map((t) => (
              <div
                key={t.id}
                className="bg-white p-4 rounded-xl shadow-sm flex items-center justify-between border border-slate-100 group active:scale-[0.99] transition-transform"
              >
                <div className="flex items-center gap-3">
                  <div
                    className={`w-12 h-12 rounded-2xl flex items-center justify-center ${
                      t.type === "income"
                        ? "bg-emerald-100 text-emerald-600"
                        : t.type === "expense"
                        ? "bg-rose-100 text-rose-600"
                        : "bg-blue-100 text-blue-600"
                    }`}
                  >
                    {t.type === "income" ? (
                      <ArrowUpCircle size={24} />
                    ) : t.type === "expense" ? (
                      <ArrowDownCircle size={24} />
                    ) : (
                      <PiggyBank size={24} />
                    )}
                  </div>
                  <div>
                    <div className="font-bold text-slate-800">{t.title}</div>
                    <div className="text-xs text-slate-400">{t.date}</div>
                  </div>
                </div>
                <div className="flex items-center gap-3">
                  <span
                    className={`font-bold text-lg ${
                      t.type === "income"
                        ? "text-emerald-500"
                        : t.type === "expense"
                        ? "text-rose-500"
                        : "text-blue-500"
                    }`}
                  >
                    {t.type === "income" ? "+" : "-"}
                    {t.amount.toLocaleString()}
                  </span>
                  <button
                    onClick={() => deleteTransaction(t.id)}
                    className="w-8 h-8 flex items-center justify-center text-slate-300 hover:text-rose-500 hover:bg-rose-50 rounded-lg transition-colors"
                  >
                    <Trash2 size={16} />
                  </button>
                </div>
              </div>
            ))
          )}
        </div>

        {/* Floating Action Button (FAB) */}
        <button
          onClick={() => setIsModalOpen(true)}
          className="fixed bottom-6 right-6 w-14 h-14 bg-indigo-600 text-white rounded-full shadow-lg shadow-indigo-300 flex items-center justify-center hover:bg-indigo-700 active:scale-90 transition-all z-40"
        >
          <Plus size={28} />
        </button>

        {/* Modal Form */}
        <TransactionForm
          isOpen={isModalOpen}
          onClose={() => setIsModalOpen(false)}
          onSave={addTransaction}
        />
      </div>
    </div>
  );
}
